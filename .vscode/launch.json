{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sparkplug Examples",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build - examples",
            "program": "${workspaceFolder}/src/SparkplugNet.Examples/bin/Debug/net8.0/SparkplugNet.Examples.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Sparkplug Tests",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/SparkplugNet.Tests/SparkplugNet.Tests.csproj",
                "--logger",
                "console;verbosity=detailed",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}